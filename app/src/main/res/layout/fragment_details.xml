<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.proyecto.listmagiccards.DetailsActivityFragment"
        tools:showIn="@layout/activity_details">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameCardDetail"
            tools:ignore="MissingConstraints"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageCardDetails"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeCardDetails"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameCardDetail"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageCardDetails"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center" />

        <ImageView
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageCardDetails"
            android:layout_width="135dp"
            android:layout_height="170dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="240dp"
            android:layout_marginEnd="192dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="192dp"
            android:layout_marginStart="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:id="@+id/colorCardDetails"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageCardDetails"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/typeCardDetails"
            android:layout_marginTop="10dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:id="@+id/rarityCardDetails"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageCardDetails"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/colorCardDetails"
            android:layout_marginTop="10dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="315dp"
            android:id="@+id/descripcionCardDetails"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageCardDetails"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="viewStart" />
    </android.support.constraint.ConstraintLayout>
</layout>